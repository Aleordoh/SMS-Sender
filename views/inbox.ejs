<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/results.css">
  <link rel="stylesheet" href="/css/inbox.css">
</head>

<body>
  <div class="container wide">
    <div class="nav">
      <a href="/sms">ğŸ“¤ Enviar SMS</a>
      <a href="/sms/inbox" class="active">ğŸ“¨ Mensajes Recibidos</a>
      <a href="/sms/config">âš™ï¸ ConfiguraciÃ³n</a>
      <a href="/logout" style="margin-left: auto;">ğŸšª Cerrar SesiÃ³n</a>
    </div>

    <div class="inbox-header">
      <div>
        <h1 style="margin: 0;">ğŸ“¨ Mensajes Recibidos</h1>
        <p style="margin: 5px 0 0 0; opacity: 0.9; font-size: 14px;">Monitoreo en tiempo real de respuestas SMS</p>
      </div>
      <div class="inbox-stats">
        <div class="inbox-stat-item">
          <span class="inbox-stat-label">Total Mensajes</span>
          <span class="inbox-stat-value" id="totalMessages">0</span>
        </div>
        <div class="inbox-stat-item">
          <span class="inbox-stat-label">Ãšltima ActualizaciÃ³n</span>
          <span class="inbox-stat-value" id="lastUpdate" style="font-size: 14px;">--:--:--</span>
        </div>
      </div>
    </div>

    <div class="auto-refresh-controls">
      <div class="refresh-toggle">
        <label class="switch">
          <input type="checkbox" id="autoRefreshToggle" checked>
          <span class="slider"></span>
        </label>
        <span><strong>ActualizaciÃ³n AutomÃ¡tica</strong></span>
      </div>

      <div class="time-range-selector">
        <label>Mostrar Ãºltimas:</label>
        <select id="timeRange">
          <option value="1">1 hora</option>
          <option value="3">3 horas</option>
          <option value="6" selected>6 horas</option>
          <option value="12">12 horas</option>
          <option value="24">24 horas</option>
          <option value="72">3 dÃ­as</option>
          <option value="168">7 dÃ­as</option>
        </select>
      </div>

      <div class="refresh-status">
        <div class="spinner" id="loadingSpinner"></div>
        <span id="refreshStatus">Esperando...</span>
        <button onclick="manualRefresh()" class="button" style="padding: 8px 20px;">ğŸ”„ Actualizar Ahora</button>
      </div>
    </div>

    <div id="messagesContainer">
      <div class="empty-inbox">
        <div class="empty-inbox-icon">ğŸ“­</div>
        <p>No hay mensajes recibidos</p>
        <p style="font-size: 14px; color: #bbb;">Los mensajes aparecerÃ¡n aquÃ­ automÃ¡ticamente</p>
      </div>
    </div>

    <div class="action-buttons">
      <button onclick="downloadMessages()" class="button button-secondary" id="downloadBtn" style="display: none;">
        ğŸ“¥ Descargar CSV
      </button>
      <button onclick="clearMessages()" class="button button-secondary" id="clearBtn" style="display: none;">
        ğŸ—‘ï¸ Limpiar Vista
      </button>
    </div>

    <footer>
      <p>SMS Sender - Synway SMG4008-8WA Gateway</p>
    </footer>
  </div>

  <script>
    let autoRefreshInterval = null;
    let lastQueryParams = null;
    let knownMessageIds = new Set();
    let allMessages = [];

    // Auto-refresh toggle
    document.getElementById('autoRefreshToggle').addEventListener('change', (e) => {
      if (e.target.checked) {
        startAutoRefresh();
      } else {
        stopAutoRefresh();
      }
    });

    // Time range change
    document.getElementById('timeRange').addEventListener('change', () => {
      manualRefresh();
    });

    function startAutoRefresh() {
      stopAutoRefresh();
      updateStatus('Auto-actualizaciÃ³n activada');
      loadMessages();
      autoRefreshInterval = setInterval(() => {
        loadMessages();
      }, 30000); // Cada 30 segundos
    }

    function stopAutoRefresh() {
      if (autoRefreshInterval) {
        clearInterval(autoRefreshInterval);
        autoRefreshInterval = null;
      }
      updateStatus('Auto-actualizaciÃ³n desactivada');
    }

    function manualRefresh() {
      updateStatus('Actualizando...');
      loadMessages();
    }

    function updateStatus(message) {
      document.getElementById('refreshStatus').textContent = message;
    }

    function showSpinner() {
      document.getElementById('loadingSpinner').classList.add('active');
    }

    function hideSpinner() {
      document.getElementById('loadingSpinner').classList.remove('active');
    }

    function getTimeRange(hours) {
      const now = new Date();
      const past = new Date(now.getTime() - hours * 60 * 60 * 1000);

      function formatTime(date) {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        const hour = String(date.getHours()).padStart(2, '0');
        const min = String(date.getMinutes()).padStart(2, '0');
        const sec = String(date.getSeconds()).padStart(2, '0');
        return `${year}${month}${day}${hour}${min}${sec}`;
      }

      return {
        begintime: formatTime(past),
        endtime: formatTime(now)
      };
    }

    function formatDateTime(dateStr) {
      if (!dateStr) return 'N/A';
      try {
        const year = dateStr.substr(0, 4);
        const month = dateStr.substr(4, 2);
        const day = dateStr.substr(6, 2);
        const hour = dateStr.substr(8, 2);
        const min = dateStr.substr(10, 2);
        const sec = dateStr.substr(12, 2);
        return `${day}/${month}/${year} ${hour}:${min}:${sec}`;
      } catch (e) {
        return dateStr;
      }
    }

    function generateMessageId(msg) {
      return `${msg.phone}_${msg.time}_${msg.message}`;
    }

    async function loadMessages() {
      showSpinner();

      const hours = parseInt(document.getElementById('timeRange').value);
      const timeRange = getTimeRange(hours);
      // Don't include port parameter - let API query all ports
      lastQueryParams = {
        ...timeRange
      };

      try {
        const response = await fetch('/sms/query-received', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(lastQueryParams)
        });

        const result = await response.json();

        if (result.success && result.messages && result.messages.length > 0) {
          // Detectar nuevos mensajes
          const newMessages = result.messages.filter(msg => {
            const msgId = generateMessageId(msg);
            return !knownMessageIds.has(msgId);
          });

          // Actualizar conjunto de IDs conocidos
          result.messages.forEach(msg => {
            knownMessageIds.add(generateMessageId(msg));
          });

          allMessages = result.messages;
          displayMessages(result.messages, newMessages.map(generateMessageId));

          const now = new Date();
          document.getElementById('lastUpdate').textContent =
            `${String(now.getHours()).padStart(2, '0')}:${String(now.getMinutes()).padStart(2, '0')}:${String(now.getSeconds()).padStart(2, '0')}`;
          document.getElementById('totalMessages').textContent = result.messages.length;

          updateStatus(`${result.messages.length} mensajes cargados`);

          // Mostrar notificaciÃ³n si hay mensajes nuevos
          if (newMessages.length > 0) {
            showNotification(`Â¡${newMessages.length} nuevo(s) mensaje(s)!`);
          }
        } else {
          displayEmptyState();
          document.getElementById('totalMessages').textContent = '0';
          updateStatus('Sin mensajes en el perÃ­odo seleccionado');
        }
      } catch (error) {
        displayError(error.message);
        updateStatus('Error al cargar mensajes');
      } finally {
        hideSpinner();
      }
    }

    function displayMessages(messages, newMessageIds = []) {
      const container = document.getElementById('messagesContainer');

      let html = '<table class="messages-table">';
      html += '<thead><tr><th>#</th><th>TelÃ©fono</th><th>Mensaje</th><th>Fecha/Hora</th><th>Puerto</th></tr></thead>';
      html += '<tbody>';

      // Ordenar por tiempo (mÃ¡s recientes primero)
      const sortedMessages = [...messages].sort((a, b) => {
        return (b.time || '').localeCompare(a.time || '');
      });

      sortedMessages.forEach((msg, index) => {
        const msgId = generateMessageId(msg);
        const isNew = newMessageIds.includes(msgId);
        const rowClass = isNew ? 'message-row new-message' : 'message-row';

        html += `<tr class="${rowClass}">
          <td>${index + 1}</td>
          <td class="phone-number">${msg.phone || 'N/A'}</td>
          <td class="message-text">${msg.message || 'N/A'}</td>
          <td class="message-time">${formatDateTime(msg.time)}</td>
          <td><span class="port-badge">Puerto ${msg.port || 'N/A'}</span></td>
        </tr>`;
      });

      html += '</tbody></table>';
      container.innerHTML = html;

      document.getElementById('downloadBtn').style.display = 'inline-block';
      document.getElementById('clearBtn').style.display = 'inline-block';
    }

    function displayEmptyState() {
      const container = document.getElementById('messagesContainer');
      container.innerHTML = `
        <div class="empty-inbox">
          <div class="empty-inbox-icon">ğŸ“­</div>
          <p>No hay mensajes recibidos</p>
          <p style="font-size: 14px; color: #bbb;">Los mensajes aparecerÃ¡n aquÃ­ automÃ¡ticamente</p>
        </div>
      `;
      document.getElementById('downloadBtn').style.display = 'none';
      document.getElementById('clearBtn').style.display = 'none';
    }

    function displayError(errorMessage) {
      const container = document.getElementById('messagesContainer');
      container.innerHTML = `
        <div class="alert alert-error">
          <strong>Error:</strong> ${errorMessage}
        </div>
      `;
    }

    function showNotification(message) {
      // Sonido de notificaciÃ³n (opcional)
      try {
        const audio = new Audio('data:audio/wav;base64,');
        audio.volume = 0.3;
        audio.play().catch(() => {});
      } catch (e) {}

      // NotificaciÃ³n visual
      const oldTitle = document.title;
      document.title = `(${message}) ${oldTitle}`;
      setTimeout(() => {
        document.title = oldTitle;
      }, 5000);
    }

    function downloadMessages() {
      if (!lastQueryParams || allMessages.length === 0) return;

      const params = new URLSearchParams(lastQueryParams);
      window.location.href = `/sms/download-received?${params.toString()}`;
    }

    function clearMessages() {
      if (confirm('Â¿EstÃ¡s seguro de que quieres limpiar la vista? Los mensajes seguirÃ¡n en el gateway.')) {
        knownMessageIds.clear();
        allMessages = [];
        displayEmptyState();
        document.getElementById('totalMessages').textContent = '0';
        updateStatus('Vista limpiada');
      }
    }

    // Iniciar auto-refresh al cargar la pÃ¡gina
    window.addEventListener('load', () => {
      startAutoRefresh();
    });

    // Limpiar interval al cerrar
    window.addEventListener('beforeunload', () => {
      stopAutoRefresh();
    });
  </script>
</body>

</html>